{% extends 'base.html.twig' %}

{% block title %}List of Users{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <a href="{{ path('user_new') }}" class="btn btn-primary">Add New User</a>
    <table class="table">
        <thead>
        <tr>
            <td> ID </td>
            <td> Name </td>
            <td> Email</td>
            <td> gender </td>
            <td> Status </td>
            <td> Create Dte </td>
            <td> Update Date </td>
            <td> Edit </td>
            <td> Delete </td>
        </tr>
        </thead>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.name }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.gender }}</td>
                <td>{{ user.status }}</td>
                <td>{{ user.created_at }}</td>
                <td>{{ user.updated_at }}</td>
                <td>
                    <a href="{{ path('user_edit', {'id': user.id}) }}" class="btn btn-primary">Edit</a>
                </td>
                <td>
                    <a href="{{ path('user_delete', {'id': user.id}) }}" class="btn btn-primary">Delete</a>
                </td>

            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}

